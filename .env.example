# Server Configuration
API_PORT=3030
NODE_ENV=development

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/crm_development"
DEV_DB_URL="postgresql://username:password@localhost:5432/crm_development"
PROD_DB_URL="postgresql://username:password@production-host:5432/crm_production"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
