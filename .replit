modules = ["nodejs-20", "web"]
run = "npm run start:dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npm run start:prod"]
build = ["sh", "-c", "npm install && npx prisma generate"]

[workflows]
runButton = "Production"

[[workflows.workflow]]
name = "Dev Server"
author = 41345533
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma generate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:dev"

[[workflows.workflow]]
name = "Client Dev"
author = 41345533
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/client && npm run dev"

[[workflows.workflow]]
name = "Production"
author = 40545166
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx prisma generate"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start:prod"
